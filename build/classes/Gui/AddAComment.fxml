<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="Gui.AddACommentController">
    <VBox layoutX="100" layoutY="100" prefHeight="200" prefWidth="400" spacing="10">
        <Label text="Add a Comment:" />
        <TextField fx:id="commentTextField" promptText="Write your comment here" />
      <Button mnemonicParsing="false" onAction="#addComment" text="submit" />
        
    </VBox>
</AnchorPane>
