<AnchorPane prefHeight="149.0" prefWidth="606.0" styleClass="backcolor" stylesheets="@../css/menustyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ItemController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="116.0" prefWidth="600.0" style="-fx-background-color: #071330; -fx-background-radius: 20;" stylesheets="@../css/menustyle.css">
         <children>
            <ImageView fx:id="image" fitHeight="113.0" fitWidth="147.0" layoutX="22.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true" style="visibility: .;">
               <effect>
                  <DropShadow />
               </effect>
               <image>
                  <Image url="@../../../../../Downloads/test.jpg" />
               </image>
            </ImageView>
            <Label fx:id="description" alignment="TOP_LEFT" layoutX="180.0" layoutY="50.0" prefHeight="38.0" prefWidth="279.0" text="Description" textFill="WHITE" wrapText="true" />
            <Circle fill="#9f27b2" layoutX="160.0" layoutY="30.0" opacity="0.85" radius="15.0" stroke="BLACK" strokeType="INSIDE" />
            <Label fx:id="level" layoutX="153.0" layoutY="21.0" text="20" textFill="WHITE">
               <font>
                  <Font name="Webdings" size="15.0" />
               </font>
            </Label>
            <Label fx:id="level1" layoutX="151.0" layoutY="33.0" text="level">
               <font>
                  <Font name="Webdings" size="8.0" />
               </font>
            </Label>
            <Label fx:id="categorie" layoutX="180.0" layoutY="88.0" prefHeight="17.0" prefWidth="279.0" text="Categorie" textFill="WHITE" wrapText="true" />
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#971f95" height="90.0" layoutX="59.0" layoutY="52.0" opacity="0.53" rotate="90.0" stroke="#9a1b90" strokeType="INSIDE" width="17.0" />
            <Label fx:id="date" layoutX="22.0" layoutY="83.0" prefHeight="27.0" prefWidth="140.0" text="01-01-2023" textFill="WHITE" textOverrun="CLIP">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="title" layoutX="180.0" layoutY="25.0" prefHeight="27.0" prefWidth="279.0" text="Title" textFill="WHITE" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox fx:id="vbox" alignment="BOTTOM_CENTER" layoutX="459.0" layoutY="21.0" prefWidth="120.0" spacing="5.0">
               <children>
                  <Button fx:id="mod_button" mnemonicParsing="false" onAction="#modifyChallenge" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(from 25px 25px to 100px 70px, #c10c99,  #071330); -fx-cursor: hand;" stylesheets="@../css/blogstyle.css" text="Modify" textFill="WHITE" />
                  <Button fx:id="del_button" mnemonicParsing="false" onAction="#removeChallenge" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(from 25px 25px to 100px 70px, #c10c99,  #071330); -fx-cursor: hand;" text="Delete" textFill="WHITE" />
                  <Button mnemonicParsing="false" onAction="#participate" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(from 25px 25px to 100px 70px, #c10c99,  #071330); -fx-cursor: hand;" text="Show Participations" textFill="WHITE" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
         </children>
         <styleClass>
            <String fx:value="colorsearch" />
            <String fx:value="shadow" />
         </styleClass>
      </AnchorPane>
   </children>
</AnchorPane>
