<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" onMouseClicked="#showVideo" prefHeight="164.0" prefWidth="317.0" style="-fx-cursor: pointer;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.VideoItemController">
   <children>
      <ImageView fx:id="video_image" fitHeight="161.0" fitWidth="135.0" layoutX="14.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: pointer;">
         <image>
            <Image url="@../../../../../Pictures/ISIM_LOGO_ar.png" />
         </image>
         <effect>
            <DropShadow blurType="TWO_PASS_BOX" height="34.19" radius="16.2275" width="32.72" />
         </effect>
      </ImageView>
      <Label fx:id="video_title" layoutX="163.0" layoutY="19.0" prefHeight="27.0" prefWidth="127.0" text="Title">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="video_desc" alignment="TOP_LEFT" layoutX="163.0" layoutY="59.0" prefHeight="64.0" prefWidth="147.0" text="description" wrapText="true" />
      <Label fx:id="video_date" alignment="TOP_LEFT" layoutX="163.0" layoutY="123.0" prefHeight="27.0" prefWidth="147.0" text="15-22-2023" />
      <ImageView fx:id="modifyVideo" fitHeight="27.0" fitWidth="30.0" layoutX="250.0" layoutY="117.0" onMouseClicked="#modifyVideo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/edit.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="27.0" fitWidth="30.0" layoutX="277.0" layoutY="117.0" onMouseClicked="#deleteVideo" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/delete.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
