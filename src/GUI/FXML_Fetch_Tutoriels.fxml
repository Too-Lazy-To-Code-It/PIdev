<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="1366.0" styleClass="backcolor" stylesheets="@../css/menustyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FXML_Fetch_TutorielsController">
   <children>
      <ImageView fitHeight="721.0" fitWidth="1370.0" layoutY="-24.0" pickOnBounds="true">
         <image>
            <Image url="@../img/black.png" />
         </image>
      </ImageView>
      <HBox fx:id="addButton1" alignment="CENTER" layoutX="914.0" layoutY="14.0" prefHeight="34.0" prefWidth="166.0" spacing="5.0">
         <children>
            <ImageView fitHeight="23.0" fitWidth="22.0" onMouseClicked="#search" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/search.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="categorie" onAction="#setCategorie" prefHeight="25.0" prefWidth="120.0" promptText="categorie" />
         </children>
      </HBox>
      <ScrollPane layoutX="171.0" layoutY="63.0" prefHeight="550.0" prefWidth="1069.0" style="-fx-background-color: #1C233D;">
         <content>
            <GridPane fx:id="tutorielGrid" hgap="100.0" prefHeight="6.0" prefWidth="1068.0" style="-fx-background-color: #1C233D;" vgap="50.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
               <padding>
                  <Insets left="55.0" right="55.0" top="30.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
      <VBox fx:id="vBox" layoutX="24.0" layoutY="48.0" prefHeight="200.0" prefWidth="147.0" spacing="10.0">
         <children>
            <HBox fx:id="addButton" alignment="CENTER" onMouseClicked="#addTutoriel" prefHeight="34.0" prefWidth="131.0" spacing="3.0" style="-fx-cursor: hand;" stylesheets="@../css/style.css">
               <children>
                  <ImageView fitHeight="34.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/add.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="34.0" prefWidth="170.0" text="Add Tutoriel" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" onMouseClicked="#showFavoris" prefHeight="34.0" prefWidth="131.0" spacing="3.0" style="-fx-cursor: hand;" stylesheets="@../css/style.css">
               <children>
                  <ImageView fitHeight="34.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/emptystar.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="34.0" prefWidth="170.0" text="Show Favoris" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <TextField fx:id="searching" layoutX="1082.0" layoutY="21.0" prefHeight="15.0" prefWidth="149.0" promptText="search" />
   </children>
</AnchorPane>
