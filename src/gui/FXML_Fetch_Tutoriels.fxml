<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.FXML_Fetch_TutorielsController">
   <children>
      <HBox fx:id="addButton1" alignment="CENTER" layoutX="949.0" layoutY="14.0" prefHeight="34.0" prefWidth="131.0" spacing="3.0">
         <children>
            <TextField fx:id="searching" promptText="search" />
            <ImageView fitHeight="23.0" fitWidth="22.0" onMouseClicked="#search" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/search.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <ScrollPane layoutX="231.0" layoutY="48.0" prefHeight="615.0" prefWidth="863.0">
         <content>
            <GridPane fx:id="tutorielGrid" hgap="100.0" prefHeight="0.0" prefWidth="890.0" vgap="50.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
               <padding>
                  <Insets left="55.0" right="55.0" top="30.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
      <HBox fx:id="addButton" alignment="CENTER" layoutX="14.0" layoutY="48.0" onMouseClicked="#addTutoriel" prefHeight="34.0" prefWidth="131.0" spacing="3.0" style="-fx-cursor: pointer;" stylesheets="@../css/style.css">
         <children>
            <ImageView fitHeight="34.0" fitWidth="31.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/add.png" />
               </image>
            </ImageView>
            <Label prefHeight="34.0" prefWidth="170.0" text="Add Tutoriel" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <ComboBox fx:id="categorie" layoutX="801.0" layoutY="19.0" onAction="#setCategorie" prefHeight="25.0" prefWidth="120.0" promptText="categorie" />
   </children>
</AnchorPane>
